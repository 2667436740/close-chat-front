.u-text__price {
  font-size: 14px;
  color: #606266;
}
.u-text__value {
  font-size: 14px;

  display: -webkit-box;
  display: -webkit-flex;
  display: flex;

  -webkit-box-orient: horizontal;
  -webkit-box-direction: normal;
  -webkit-flex-direction: row;
          flex-direction: row;
  color: #606266;
  -webkit-flex-wrap: wrap;
          flex-wrap: wrap;
  -webkit-box-flex: 1;
  -webkit-flex: 1;
          flex: 1;
  text-overflow: ellipsis;
