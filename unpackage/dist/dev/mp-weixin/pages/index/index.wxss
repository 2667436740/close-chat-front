.content {
  display: flex;
  flex-direction: column;
}
.icons {
  display: flex;
  flex-direction: row;
}
.icons .icon-1 {
  padding-right: 10px;
}
.item-style {
  height: 50px;
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 5px 15px;
  border-bottom: 1px #dadbde solid;
}
.item-style .avatar {
  position: relative;
}
.item-style .avatar .badge {
  position: absolute;
  top: 0;
  right: 0;
  -webkit-transform: translateY(-40%);
          transform: translateY(-40%);
}
.item-text {
  flex: 1;
  width: 80%;
  overflow: hidden;
}
.item-title {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}
.item-title .new-badge {
  width: 17px;
  height: 17px;
}
.item-title .name {
  font-size: 18px;
  font-weight: 500;
}
.item-title .time {
  font-size: 12px;
  color: #666666;
}
.empty {
  padding-top: 200rpx;
}

